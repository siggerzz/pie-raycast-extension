{
	"$schema": "https://www.raycast.com/schemas/extension.json",
	"name": "pie-design-system-raycast",
	"title": "PIE Design System Assistant",
	"description": "Raycast Extension for the PIE Design System",
	"icon": "pie-icon.png",
	"author": "Ben Siggery",
	"commands": [
		{
			"name": "get-pie-releases-list",
			"title": "View PIE Design System Releases",
			"description": "PIE Design System Assitant",
			"mode": "view"
		},
		{
			"name": "get-pie-releases-menubar",
			"title": "PIE Design System Releases - Menubar Widget",
			"description": "PIE Design System Assitant",
			"mode": "menu-bar",
			"interval": "30m"
		}
	],
	"dependencies": {
		"@justeat/pie-design-tokens": "^5.9.0",
		"@octokit/rest": "20.0.2",
		"@raycast/api": "latest",
		"execa": "8.0.1",
		"node-fetch": "3.3.2",
		"shell-env": "^4.0.1",
		"title-case": "3.0.3"
	},
	"devDependencies": {
		"@octokit/types": "12.4.0",
		"@raycast/eslint-config": "^1.0.6",
		"@types/node": "18.18.4",
		"@types/react": "18.2.27",
		"eslint": "^8.51.0",
		"prettier": "^3.0.3",
		"typescript": "^5.2.2"
	},
	"scripts": {
		"build": "ray build -e dist",
		"dev": "ray develop",
		"fix-lint": "ray lint --fix",
		"lint": "ray lint",
		"publish": "ray publish"
	}
}
